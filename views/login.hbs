<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-warning-subtle">
      <h1 class="text-center mt-3 fs-1">Login</h1>
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2 fs-3">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2 fs-3">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block fs-5">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block fs-5">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>