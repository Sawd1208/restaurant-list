<h1 class="text-center mt-3">創建餐廳</h1>
<div class="container" id="new">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="InputName" class="form-label">name:</label>
      <input type="text" class="form-control" name="name" required="true">
    </div>
    <div class="mb-3">
      <label for="InputName_en" class="form-label">name_en:</label>
      <input type="text" class="form-control" name="name_en" >
    </div>
    <div class="mb-3">
      <label for="InputCategory" class="form-label">category:</label>
      <input type="text" class="form-control" name="category" required="true">
    </div>
    <div class="mb-3">
      <label for="InputImage" class="form-label">image:</label>
      <input type="text" class="form-control" name="image" required="true">
    </div>
    <div class="mb-3">
      <label for="InputLocation" class="form-label">location:</label>
      <input type="text" class="form-control" name="location" required="true">
    </div>
    <div class="mb-3">
      <label for="InputPhone" class="form-label">phone:</label>
      <input type="text" class="form-control" name="phone" required="true">
    </div>
    <div class="mb-3">
      <label for="InputGoogle_map" class="form-label">google_map:</label>
      <input type="text" class="form-control" name="google_map" required="true">
    </div>
    <div class="mb-3">
      <label for="InputRating" class="form-label">rating:</label>
      <input type="number" class="form-control" name="rating" >
    </div>
    <div class="mb-3">
      <label for="InputDescription" class="form-label">description:</label>
      <input type="text" class="form-control" name="description" required="true">
    </div>
    
    <button type="submit" class="btn btn-primary btn-lg mb-2">Create</button>
    <a href="/" class="btn btn-primary btn-lg mb-2" role="button">back</a>
  </form>
</div>
